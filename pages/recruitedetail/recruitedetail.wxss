.recruit-item {
    background: #fff;
    padding: 10rpx 15rpx;
    font-size: 30rpx;
}

.recruit-item:not(:first-child) {
    margin-top: 15rpx;
}

.recruit-baseinfo {
    display: flex;
    justify-content: space-between;
}

.recruit-title {
    font-size: 45rpx;
}

.recruit-fee {
    color: #53cac4;
}

.recruit-company {
    font-size: 35rpx;
    color: #c2c2c2;
}

.recruit-label text {
    font-size: 25rpx;
    background: #f8f8f8;
    padding: 10rpx;
    color: #bbbbbb;
}

.recruit-label text:not(:first-child) {
    margin-left: 20rpx;
}

.recruit-jobinfo {
    background: #fff;
    margin-top: 15rpx;
    font-size: 30rpx;
    padding: 10rpx 15rpx;
}

.recruit-jobinfo-title {
    font-size: 30rpx;
    font-weight: bold;
    text-indent: 0;
    padding-left: 15rpx;
    border-left: 8rpx solid #ff6000;
}