/**app.wxss**/

@import 'style/weui.wxss';
@import 'style/icon.wxss';
page {
    background: #f5f5f5;
}

.container {
    position: relative;
}

.hidden {
    display: none;
}

.tc {
    text-align: center;
}

.tl {
    text-align: left;
}

.tr {
    text-align: right;
}


/*无内容样式*/

.empty-placeholder {
    margin-top: 150rpx;
    width: 100%;
    text-align: center;
}

.empty-placeholder text {
    color: #666;
    font-size: 40rpx;
    margin-left: 30rpx;
}

.icon-xl {
    width: 140rpx;
    height: 148rpx;
    display: block;
    margin: 0 auto;
}

.txt {
    font-size: 26rpx;
    color: #888888;
    margin-top: 36rpx;
}


/*加载更多*/

.loadMoreGif {
    margin: 15rpx auto;
    width: 220rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.loadMoreGif text {
    font-size: 30rpx;
    color: #999;
    margin-left: 10rpx;
}

.loadMoreGif image {
    width: 30rpx;
    height: 30rpx;
}